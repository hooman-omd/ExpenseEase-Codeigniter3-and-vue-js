{% extends "main-layout.twig" %}

{% block pagetitle %}مدیریت دسته‌بندی‌ها{% endblock %}

{% block content %}
<div class="p-6">
    <div class="flex justify-between items-center mb-6">
        <h3 class="text-lg font-semibold text-gray-800">دسته‌بندی‌های شما</h3>
        <button 
            id = "add-category-btn"
            class="bg-indigo-600 text-white py-2 px-4 rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500"
        >
            <i class="fas fa-plus ml-1"></i>
            دسته‌بندی جدید
        </button>
    </div>

    <!-- جدول دسته‌بندی‌ها -->
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">عنوان</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">تعداد تراکنش‌ها</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">تاریخ ایجاد</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">تاریخ آخرین بروزرسانی</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">عملیات</th>
                    </tr>
                </thead>
                <tbody id="categoryTable" class="bg-white divide-y divide-gray-200">
                    <tr v-for="category in categories">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 h-10 w-10 bg-indigo-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-tags text-indigo-600"></i>
                                </div>
                                <div class="mr-4">
                                    <div class="text-sm font-medium text-gray-900" v-html="category.title"></div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-900">۱۵ تراکنش</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-500" v-html="toPersianNumber(category.created_at)"></div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-500" v-html="toPersianNumber(category.updated_at)"></div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <button @click="setUpdateModal(category.id)" class="text-indigo-600 hover:text-indigo-900 mr-3 edit-category-btn">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button
                               class="delete-category-btn text-red-600 hover:text-red-900 cursor-pointer"
                               @click="removeCategory(category.id)">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- مودال افزودن دسته‌بندی جدید -->
    <div id="categoryModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden">
        <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-medium">دسته‌بندی</h3>
                <button onclick="closeCategoryModal()" class="text-gray-400 hover:text-gray-500">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <div id="createCategory">
                <input type="hidden" name="category_id" id="category_id">
                <div class="mb-4">
                    <label for="categoryTitle" class="block text-sm font-medium text-gray-700 mb-1">عنوان دسته‌بندی</label>
                    <input 
                        type="text" 
                        id="categoryTitle" 
                        name="title"
                        v-model = "categoryTitle" 
                        class="w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-200"
                    >
                </div>
                
                <div class="flex justify-end space-x-3">
                    <button 
                        type="button"
                        onclick="closeCategoryModal()"
                        class="px-4 py-2 mx-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50"
                    >
                        انصراف
                    </button>
                    <button @click="insertCategory()"
                        class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700"
                    >
                        ذخیره
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
$(function(){

    $('#add-category-btn').click(function(){
        $('#categoryModal').removeClass('hidden');
        $('#category_id').val('');
        $('#categoryTitle').val('');
    });
});
    
    function closeCategoryModal() {
        $('#categoryModal').addClass('hidden');
    }
</script>
<script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
<script>
    function successAlert(messageText){
	    Swal.fire({title: "عملیات موفق",
	    text:messageText,
	    icon: "success",
	    confirmButtonText: 'تائید'});
    }
    function failAlert(messageText){
        Swal.fire({title: "خطا",
        html: messageText,
        icon: "error",
        confirmButtonText: 'تائید'});
    
	}
    const selectCategory = Vue.createApp({
        data(){
            return {
                categories: []
            }
        },
        mounted() {
            this.fetchCategories();
        },
        methods : {
            toPersianNumber(enNumber) {
                if (enNumber === null || enNumber === undefined) return '';

                const numStr = String(enNumber);

                const persianDigits = '۰۱۲۳۴۵۶۷۸۹';

                return numStr.replace(/\d/g, function(match) {
                  return persianDigits[parseInt(match)];
                });
            },
            fetchCategories() {
                const vm = this;
                $.ajax({
                  url: '{{base_url()}}Category/getCategories',
                  method: 'GET',
                  dataType: 'json',
                  success: function(response) {
                    if (response.status === 'success') {
                      vm.categories = response.data;
                    } else {
                      console.error('Failed :', response.message);
                    }
                  }
                });
              },
                setUpdateModal(id){
                    $.ajax({
                          url: "{{base_url('Category/showCategory')}}",
                          method: 'POST',
                          data: {
                            'category_id':id
                          },
                          dataType: 'json',
                          success: function(response) {
                            if (response.status === 'success') {
                              console.error('Success :', response.message);
                              $('#categoryModal').removeClass('hidden');
                              $('#category_id').val(response.data.id);
                              $('#categoryTitle').val(response.data.title);
                            } else {
                              console.error('Failed :', response.message);
                              failAlert(response.message);
                            }
                          }
                        });
                },
              removeCategory(id){
                const vm = this;
                Swal.fire({
                    title: "آیا مطمئنید؟",
                    text: "آیا می خواهید دسته بندی مورد نظر حذف شود؟",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "بله، حذف کن!",
                    cancelButtonText: "خیر",
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                          url: `{{base_url()}}Category/delete_category/${id}`,
                          method: 'POST',
                          dataType: 'json',
                          success: function(response) {
                            if (response.status === 'success') {
                              console.error('Success :', response.message);
                              vm.fetchCategories();
                              successAlert(response.message);
                            } else {
                              console.error('Failed :', response.message);
                            }
                          }
                        });
                    }
                });
              }
            }
        }).mount("#categoryTable");

        Vue.createApp({
            data(){
                return{
                    categoryTitle : ''
                }
            },
            methods : {
                insertCategory(){
                    const vm = this;
                    $.ajax({
                          url: "{{base_url('Category/insert_category')}}",
                          method: 'POST',
                          data: {
                            'category_id':$("#category_id").val(),
                            'title':vm.categoryTitle
                          },
                          dataType: 'json',
                          success: function(response) {
                            if (response.status === 'success') {
                              console.error('Success :', response.message);
                              selectCategory.fetchCategories();
                              vm.categoryTitle='';
                              $("#category_id").val('');
                              closeCategoryModal();
                              successAlert(response.message);
                            } else {
                              console.error('Failed :', response.message);
                              failAlert(response.message);
                            }
                          }
                        });
                }
            }
        }).mount("#createCategory");
</script>
{% endblock %}